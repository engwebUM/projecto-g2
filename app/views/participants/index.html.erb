<%= render './home/formTopBar' %>

<p id="notice"><%= notice %></p>


<div class="title darkblue"> 
  <br>.: Participants :.
</div>
<br><br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Ticket</th>
      <th>Appeared</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td>
          <%= link_to "#{participant.name}", participant, method: :get %>
        </td>
        <td><%= participant.email %></td>
        
        <td><%= Ticket.where(id:(participant.ticket_id)).take.kind %></td>
        <td><%= participant.appeared ? 'Yes' : 'No' %></td>
          <td><%= link_to 'Add Extras', addExtras_path(participant), method: :get, :class=>'btn btn-danger' %></td>
          <td><%= link_to 'Rem Extras', remExtras_path(participant), method: :get, :class=>'btn btn-danger' %></td>

        <td><%= button_to "Edit", edit_participant_path(participant), method: :get, :class=>'btn btn-danger' %></td>
        <td><%= button_to "Destroy", participant, method: :delete, data: { confirm: 'Are you sure you want to remove the participant '+participant.name+' from the list?' }, :class=>'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="hh4">
  <%= link_to "New Participant", new_participant_path, :class => "btn btn-primary btn-lg"%>
</div>

<br><br><br><br>
<div class= "subtitle darkblue">
  Import Participants 
</div>

<div class="centro">
  <br>
  <%= form_tag import_participants_path, multipart: true do %>
    <%= file_field_tag :file %>
    <br>
    <%= submit_tag "Import", :class=>'btn btn-danger' %>
  <% end %>
</div>

<br><br><br><br>

<div class="backpage">
  <%= link_to 'Back', home_index_path %>
</div>

