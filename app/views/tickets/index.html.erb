<%= render './home/formTopBar' %>

<p id="notice"><%= notice %></p>

<div class="title darkblue"> 
  <br>.: Tickets :.
</div>

<br><br>
<table>
  <thead>
    <tr>
      <th>Kind</th>
      <th>Money</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.kind %></td>
        <td><%= ticket.money %></td>
        <td><%= button_to "Edit", edit_ticket_path(ticket), method: :get, :class=>'btn btn-danger' %></td>
        <td><%= button_to "Destroy", ticket, method: :delete, data: { confirm: 'Are you sure you want to remove the ticket '+ticket.kind+' from the list?' }, :class=>'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="hh4">
  <%= link_to "New Ticket", new_ticket_path, :class => "btn btn-primary btn-lg"%>
</div>

<br><br><br><br>

<div class="backpage">
  <%= link_to 'Back', home_index_path %>
</div>
